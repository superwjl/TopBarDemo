<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tik.testa1">

    <!-- 相机及对焦权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.tik.testa1.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tik.testa1.act.CustomTopBarAct"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tik.testa1.act.ScanningAct"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tik.testa1.act.QRCodeAct"
            android:screenOrientation="portrait" />
        <activity android:name=".act.MyScrollViewAct"
            android:screenOrientation="portrait"/>
        <activity android:name=".test.TestAct"
            android:screenOrientation="portrait"/>
        <activity android:name=".act.ScrollHideListViewAct"
            android:screenOrientation="portrait"/>
        <activity android:name=".act.FocusListViewAct"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
